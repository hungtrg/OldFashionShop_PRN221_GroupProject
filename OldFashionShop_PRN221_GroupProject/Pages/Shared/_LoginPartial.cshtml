@if (Context.Session.GetString("ROLE") == "Admin" || Context.Session.GetString("ROLE") == "Manager" || Context.Session.GetString("ROLE") == "Staff")
{
    <li class="submenu">
        <a href="javascript:;">Features</a>
        <ul>
                <li><a asp-page="/OrderManagements/Index">Order Management</a></li>
            @if (Context.Session.GetString("ROLE") == "Manager" || Context.Session.GetString("ROLE") == "Admin")
            {
                <li><a asp-page="/ProductManagements/Index">Product Management</a></li>
            }
            @if (Context.Session.GetString("ROLE") == "Admin")
            {
                <li><a asp-page="/AccountManagements/Index">Account Management</a></li>
            }
        </ul>
    </li>
}
<li class="submenu">
    @if (Context.Session.GetString("ROLE") != null)
    {
        string email = Context.Session.GetString("EMAIL");

        <a href="javascript:;">Welcome @Context.Session.GetString("FULLNAME")</a>
        <ul>
            <li><a asp-page="/Profile/MyProfile" asp-route-email="@email">My Profile</a></li>
            <li><a href="#">View Cart</a></li>
            <li><a href="#">My Orders</a></li>
            <li><a asp-page="/LogoutPage">Logout</a></li>
        </ul>
    }
    else
    {
        <a asp-page="/LoginPage">Login</a>
    }
</li>
