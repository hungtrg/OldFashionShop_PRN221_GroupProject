@page
@model OldFashionShop_PRN221_GroupProject.Pages.ProductManagements.IndexModel

<!-- ***** Main Login Area Start ***** -->
<div class="main-banner" id="top">
    <div class="container-fluid">
        <p>
            <a asp-page="Create">Create New</a>
        </p>
        <form method="get">
            <input type="text" asp-for="search" />
            <button type="submit">Search</button>
        </form>
        <table class="table">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Product[0].ProductName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Product[0].Description)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Product[0].Price)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Product[0].Discount)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Product[0].Thumb)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Product[0].Active)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Product[0].Title)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Product[0].UnitsInStock)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Product[0].Cat)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Product)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.ProductName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Description)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Price)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Discount)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Thumb)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Active)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Title)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.UnitsInStock)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Cat.CatId)
                        </td>
                        <td>
                            <a asp-page="./Edit" asp-route-id="@item.ProductId">Edit</a> |
                            <a asp-page="./Details" asp-route-id="@item.ProductId">Details</a> |
                            <a asp-page="./Delete" asp-route-id="@item.ProductId">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
<!-- ***** Main Login Area End ***** -->