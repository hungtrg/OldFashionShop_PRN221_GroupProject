@model OldFashionShop_PRN221_GroupProject.Pages.ProductManagements.DetailsModel


<!-- ***** Main Product detail Area Start ***** -->
<div class="main-banner" id="top">
    <div class="container-fluid">
        <h1>Details</h1>

        <div>
            <h4>Product</h4>
            <hr />
            <dl class="row">
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Product.CatId)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Product.CatId)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Product.Title)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Product.Title)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Product.ProductName)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Product.ProductName)
                </dd>
                <dt class="col-sm-2">
                    Image
                </dt>
                <dd class="col-sm-10">
                    <img style="height: 200px ; width:200px;" src="@Html.DisplayFor(model => model.Product.Thumb)" class="img-fluid d-none d-md-block rounded mb-2 shadow ">
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Product.Description)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Product.Description)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Product.Price)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Product.Price)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Product.Discount)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Product.Discount)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Product.UnitsInStock)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Product.UnitsInStock)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Product.Active)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Product.Active)
                </dd>
            </dl>
        </div>
        <div>
            <a asp-page="./Edit" asp-route-id="@Model.Product?.ProductId">Edit</a> |
            <a asp-page="./Index">Back to List</a>
        </div>
    </div>
</div>
