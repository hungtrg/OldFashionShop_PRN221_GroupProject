@page
@model OldFashionShop_PRN221_GroupProject.Pages.OrderManagements.EditModel

<div class="main-banner" id="top">
    <div class="container-fluid">
        <h1>Edit</h1>

        <h4>Order</h4>
        <hr />
        <div class="row">
            <div class="col-md-4">
                <form method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Order.OrderId" class="control-label"></label>
                        <input asp-for="Order.OrderId" class="form-control" readonly></input>
                        <span asp-validation-for="Order.OrderId" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Order.AccountId" class="control-label"></label>
                        <input asp-for="Order.AccountId" class="form-control" readonly></input>
                        <span asp-validation-for="Order.AccountId" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Order.OrderDate" class="control-label"></label>
                        <input asp-for="Order.OrderDate" class="form-control" readonly/>
                        <span asp-validation-for="Order.OrderDate" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Order.Deleted" class="control-label"></label>
                        <select asp-for="Order.Deleted" class="form-control">
                            <option value="false">No</option>
                            <option value="true">Yes</option>
                        </select>
                        <span asp-validation-for="Order.Deleted" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Order.Note" class="control-label"></label>
                        <input asp-for="Order.Note" class="form-control" />
                        <span asp-validation-for="Order.Note" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Order.Status" class="control-label"></label>
                        <select asp-for="Order.Status" class="form-control">
                            <option value="0">Order Canceled</option>
                            <option value="1">Wait for confirmation</option>
                            <option value="2">Confirmed</option>
                            <option value="3">Completed</option>
                        </select>
                        <span asp-validation-for="Order.Status" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Save" class="btn btn-primary" />
                    </div>
                </form>
            </div>
        </div>

        <div>
            <a asp-page="./Index">Back to List</a>
        </div>
    </div>
</div>
