@page
@model OldFashionShop_PRN221_GroupProject.Pages.LoginPageModel

@if (ViewBag.ErrorMessage != null)
{
    <div role="alert">
        @ViewBag.ErrorMessage
    </div>
}
<!-- ***** Main Login Area Start ***** -->
<div class="main-banner" id="top">
    <div class="container">
        <div class="row">
            @*<div class="col-md-4 offset-md-4">*@
                <div class="col-5 mx-auto">

                <form method="post" id="login_form">
                    <div class="card text-center card bg-default mb-3">
                        <div class="card-header">
                            LOGIN
                        </div>
                        <div class="card-body my-2">
                            <label asp-for="Email" class="control-label text-left w-100"></label>
                            <input class="form-control input-sm chat-input" asp-for="Email" >
                            <span asp-validation-for="Email" class="text-danger"></span>
                            <br />
                            <label asp-for="Password" class="control-label text-left w-100"></label>
                            <input class="form-control input-sm chat-input" asp-for="Password">
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>
                        <div class="card-footer text-muted">
                            <a href="javascript:{}" onclick="document.getElementById('login_form').submit();" class="btn btn-secondary mr-3 mb-2">LOGIN</a>
                            <br/>
                            <span class="">Don't have account <a asp-page="/RegisterPage">Register here</a></span>
                        </div>
                    </div>
                </form>

            </div>
        </div>
    </div>
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }
<!-- ***** Main Login Area End ***** -->
