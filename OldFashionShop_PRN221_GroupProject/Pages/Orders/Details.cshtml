@page
@model OldFashionShop_PRN221_GroupProject.Pages.Orders.DetailsModel


<div class="main-banner" id="top">
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.OrderDetail[0].ProductId)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.OrderDetail[0].ProductName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.OrderDetail[0].OrderNumber)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.OrderDetail[0].Quantity)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.OrderDetail[0].Discount)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.OrderDetail[0].Total)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.OrderDetail)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.ProductId)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ProductName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.OrderNumber)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Quantity)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Discount)
                    </td>
                    <td>
                        $ @Html.DisplayFor(modelItem => item.Total)
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

